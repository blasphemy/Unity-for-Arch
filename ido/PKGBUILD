pkgname=ido
_actual_ver=13.10.0
_extra_ver=daily13.06.19
pkgver=${_actual_ver}${_extra_ver}
pkgrel=100
pkgdesc="Widgets and other objects used for indicators"
arch=('i686' 'x86_64')
url="https://launchpad.net/ido"
license=('LGPL')
depends=('gtk3-ubuntu' 'glib2-ubuntu')
makedepends=('gobject-introspection' 'gtk-doc' 'vala' 'xorg-util-macros')
#checkdepends=('gtest' 'xorg-gtest' 'evemu')
groups=('unity')
options=('!libtool')
provides=('ido3')
conflicts=('ido3')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/ido_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('7fc4fd6d300f66cfa3765e815501027236f169e42204930eb25c1ca4c9a1f291d0d04f097f76a54115686da90e93ceb65a8ff2e1b447a995f7b0ba220f63649c')

build() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  autoreconf -vfi
  ./configure --prefix=/usr --disable-static
  make
}

#check() {
#  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"
#
#  make check || :
#}

package() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  make DESTDIR="${pkgdir}/" install
}

