pkgname=ido
_actual_ver=13.10.0
_extra_ver=+13.10.20130731
pkgver=${_actual_ver}daily13.07.31
pkgrel=100
pkgdesc="Widgets and other objects used for indicators"
arch=('i686' 'x86_64')
url="https://launchpad.net/ido"
license=('LGPL')
depends=('gtk3-ubuntu' 'glib2-ubuntu')
makedepends=('gobject-introspection' 'gtk-doc' 'vala' 'xorg-util-macros')
#checkdepends=('gtest' 'xorg-gtest' 'evemu')
groups=('unity')
options=('!libtool')
provides=('ido3')
conflicts=('ido3')
source=("https://launchpad.net/ubuntu/+archive/primary/+files/ido_${_actual_ver}${_extra_ver}.orig.tar.gz")
sha512sums=('eaa70262e3ebce93a61215de3a49873e591d2d0e0e048467f75186569c8d2b2678ff0292ec2d165dcbdf650a219b5295c5a5c1fa54ad49ced5e5c20dc0684422')

build() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  autoreconf -vfi
  ./configure --prefix=/usr --disable-static
  make
}

#check() {
#  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"
#
#  make check || :
#}

package() {
  cd "${srcdir}/${pkgname}-${_actual_ver}${_extra_ver}"

  make DESTDIR="${pkgdir}/" install
}

